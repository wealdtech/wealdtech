{
  "jetty": {
    "metricsendpoint": "/metricsadmin",
    "response": {
      "servername": "Weald Technology Chat Server",
      "retryperiod": 300
    },
    "instances": [
      {
        "name": "main",
        "threadpool": {
          "minthreads": 256,
          "maxthreads": 4096,
          "idletimeout": 120
        },
        "connectors": [
          {
            // For development we listen on unsecured connection
            "type": "http",
            "bindhost": "0.0.0.0",
            "port": 8080,
            "acceptqueuesize": 1024,
            "reuseaddress": true,
            "inputbuffersize": 4096
          }
        ]
      }
    ]
  },
  "jersey": {
    "cors": {
      "origin": "*",
      "reflectrequest": true
    }
  },
  "datastore": {
    "host": "localhost",
    "port": 5432,
    "name": "chat",
    "username": "chat",
    "password": "chat"
  }
}